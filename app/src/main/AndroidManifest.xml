<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.softmaticbd">

    <application
        android:allowBackup="true"
        android:icon="@drawable/tech"
        android:label="@string/app_name"
        android:roundIcon="@drawable/tech"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.AddEditNoteActivity"
            android:parentActivityName=".activity.NoteActivity"/>
        <activity android:name=".activity.NoteActivity"
            android:launchMode="singleTop"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>